@using PersonalSite_Replacement.Component

<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Error - Page not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <HeadContent>
	            <meta name="viewport" content="width=device-width, initial-scale=1.0">
	            <link href="css/shared.css" rel="stylesheet">
            </HeadContent>

            <Header currentPage="error" />
            <h1>Error, you have navigated to an address which does not exist</h1>
            <h1>Please go back, or you can click above to go to any page within the site.</h1>
            <Footer />
        </LayoutView>
    </NotFound>
</Router>
