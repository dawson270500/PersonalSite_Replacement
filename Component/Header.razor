@code {
	[Parameter]
	public string? currentPage { get; set; }

	string indexSelPage = "<div class=\"navBarItem navBarSelected\"><a href=\"\">Home</a></div>";
	string indexPage = "<div class=\"navBarItem\"><a href=\"\">Home</a></div>";

	string projectSelPage = "<div class=\"navBarItem navBarSelected\"><a href=\"projects\">Projects</a></div>";
	string projectPage = "<div class=\"navBarItem\"><a href=\"projects\">Projects</a></div>";

	string contactSelPage = "<div class=\"navBarItem navBarSelected\"><a href=\"contact\">Contact</a></div>";
	string contactPage = "<div class=\"navBarItem\"><a href=\"contact\">Contact</a></div>";

	string InfiniHordeSelPage = "<div class=\"navBarItem navBarSelected\"><a href=\"infiniHorde\">Infini Horde</a></div>";
	string InfiniHordePage = "<div class=\"navBarItem\"><a href=\"infiniHorde\">Infini Horde</a></div>";

	string TrainSelPage = "<div class=\"navBarItem navBarSelected\"><a href=\"trains\">Trains</a></div>";
	string TrainPage = "<div class=\"navBarItem\"><a href=\"trains\">Trains</a></div>";
}

<div class="header">
	<div class="headerText">
		<h1>Bailey-Tyreese Dawson</h1>
	</div>
	<img class="headerImageTag" src="img/ThePaganZone_Logo.png" />
</div>
<div class="navBar">
	@if (currentPage is null)
	{
		FileLogger.WriteLine("Error = invalid page tried to load header");
		Console.WriteLine("Error = Invalid page tried to load header");
		@("Error while creating header")
	} 
	else if (currentPage.ToLower() == "index")
	{
		@((MarkupString)indexSelPage)
		@((MarkupString)projectPage)
		@((MarkupString)contactPage)
		@((MarkupString)InfiniHordePage)
		@((MarkupString)TrainPage)
	} 
	else if (currentPage.ToLower() == "projects")
	{
		@((MarkupString)indexPage)
		@((MarkupString)projectSelPage)
		@((MarkupString)contactPage)
		@((MarkupString)InfiniHordePage)
		@((MarkupString)TrainPage)
	}
	else if (currentPage.ToLower() == "contact")
	{
		@((MarkupString)indexPage)
		@((MarkupString)projectPage)
		@((MarkupString)contactSelPage)
		@((MarkupString)InfiniHordePage)
		@((MarkupString)TrainPage)
	}
	else if (currentPage.ToLower() == "infinihorde")
	{
		@((MarkupString)indexPage)
		@((MarkupString)projectPage)
		@((MarkupString)contactPage)
		@((MarkupString)InfiniHordeSelPage)
		@((MarkupString)TrainPage)
	}
	else if (currentPage.ToLower() == "trains")
	{
		@((MarkupString)indexPage)
		@((MarkupString)projectPage)
		@((MarkupString)contactPage)
		@((MarkupString)InfiniHordePage)
		@((MarkupString)TrainSelPage)
	}
	else
	{
		FileLogger.WriteLine("Error = invalid page tried to load header");
		Console.WriteLine("Error = Invalid page tried to load header");
		@("Error while creating header")
	}
</div>
